<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15px"
    tools:context=".Telas.PainelControle.EditarUsuarioInput">

    <TextView
        android:id="@+id/TextViewTelaEditUsuario"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="@string/TextViewTelaEditUsuario"
        android:textAlignment="center"
        android:textColor="#FF1100"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewDigiteCPF"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="@string/TextViewDigiteCPF"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/EdtCPFprocurar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="11"
        android:numeric="integer"
        android:text="@string/EdtCPFprocurar" />

    <Button
        android:id="@+id/btnProcurarCPFCliente"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnProcurarCPFCliente" />

    <Button
        android:id="@+id/btnVoltarInput"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnVoltarInput" />

</LinearLayout>