<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15px"
    tools:context=".Telas.PainelControle.painelServico.ServicoEditarInput">

    <TextView
        android:id="@+id/ServicoMESSAGE_input"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="@string/ServicoMESSAGE_input"
        android:textAlignment="center"
        android:textColor="#FF1100"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Servico_id_input_TelaEDITservico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Servico_id_input_TelaEDITservico"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtServio_id_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtServio_id_input" />

    <Button
        android:id="@+id/btnServico_Procurar_input"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnServico_Procurar_input" />

    <Button
        android:id="@+id/btnServico_voltar_input"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnServico_voltar_input" />
</LinearLayout>