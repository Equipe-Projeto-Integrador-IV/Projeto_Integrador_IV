<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15px"
    tools:context=".Telas.PainelControle.painelAgendamento.AgendamentoDeletar">

    <TextView
        android:id="@+id/txtAgendamentoDeletarMESSAGE"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/txtAgendamentoDeletarMESSAGE" />

    <TextView
        android:id="@+id/txtAgendamentoDeletar_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/txtAgendamentoDeletar_id" />

    <EditText
        android:id="@+id/edtAgendamentoDeletar_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtAgendamentoDeletar_id" />

    <Button
        android:id="@+id/btnAgendamentoDeletar_DELETAR"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        app:backgroundTint="#673AB7"
        android:text="@string/btnAgendamentoDeletar_DELETAR" />

    <Button
        android:id="@+id/btnAgendamentoDeletar_VOLTAR"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnAgendamentoDeletar_VOLTAR" />
</LinearLayout>