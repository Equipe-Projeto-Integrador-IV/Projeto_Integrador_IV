<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15px"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Telas.PainelControle.DeletarOrdemServico">

    <TextView
        android:id="@+id/txtOrdemServicoDELETAR_MESSAGE"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/txtOrdemServicoDELETAR_MESSAGE" />

    <TextView
        android:id="@+id/txtOrdemServicoDELETAR_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/txtOrdemServicoDELETAR_id" />

    <EditText
        android:id="@+id/edtOrdemServicoDELETAR_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtOrdemServicoDELETAR_id" />

    <Button
        android:id="@+id/btnOrdemServicoDELETAR_deletar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        app:backgroundTint="#673AB7"
        android:text="@string/btnOrdemServicoDELETAR_deletar" />

    <Button
        android:id="@+id/btnOrdemServicoDELETAR_voltar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/btnOrdemServicoDELETAR_voltar" />
</LinearLayout>